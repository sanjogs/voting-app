<!DOCTYPE html>

<html lang="en">
	<head>
		<% include ./partials/head.ejs %>
	</head>

	<body>
    	<header>
    		<% include ./partials/header.ejs %>
    	</header>
        <main>
            <div class="container">
		        <h1>Home</h1>
		     
		       <% if(isLoggedIn) { %>
	    	    <a class='btn btn-primary btn-lg' href='/poll'>
		        	<i class='fa fa-plus fa-fw'></i>
		        	<span>Create Poll</span>
	        	</a>
	        	<a class='btn btn-primary btn-lg' href='/mypolls'>
		        	<span>View My Polls</span>
	        	</a>
	        	<hr/>
		        <% } %>
		        
		        <% if (polls.length) { %>
			        <p class=lead> Select a poll below to vote</p>
			        <div class="panel panel-default">
				       	
				       
				        <table class='table table-hover polls-list'>
				        <% polls.forEach(function(poll) { %>
				        		<tr>
						        	<td>
						        		<a href='/vote?id=<%= poll._id %>' style='display:block;width:100%;height:100%'>		        		
						        		 <%= poll.question %>
						        		<div>
						        		 	<em class='text-muted'> - <%= poll.createdbyname %> </em>
						        		</div>
					        		</a>
						        	</td>
						        
					        	</tr>	
				        <% }); %>
				       
				        </table>
				       
			         </div>
		        <% } else { %>
			        <p class=lead> There are no polls created yet.
			        </p>
			        <%= isLoggedIn?'':'Please login to create one.'%> 
		        <% } %>
		    </div>
        </main>
        <footer>
        <div class="container">
        	<hr/>
        	<a href='https://github.com/sanjogs/voting-app'>Github Repo</a>
        </div>
        </footer>
	</body>
	
   	<% include ./partials/mainscripts.ejs %>
</html>

